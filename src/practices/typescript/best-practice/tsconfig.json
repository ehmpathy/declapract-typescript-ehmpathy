{
  "extends": "@tsconfig/node-lts-strictest/tsconfig.json",
  "compilerOptions": {
    "importsNotUsedAsValues": "remove",
    "noPropertyAccessFromIndexSignature": false,
    "sourceMap": true,
    "outDir": "dist",
  },
  "filesGlob": [
    "src/**/*.ts"
  ],
  "exclude": [
    "dist",
    "coverage",
    "node_modules",
  ]
}
