{
  "name": "git-merge-packagejson",
  "version": "0.0.1",
  "description": "git merge driver for package.json that auto-resolves dependency version conflicts via semver rules",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "git-merge-packagejson": "./bin/git-merge-packagejson.js"
  },
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:unit": "jest --testPathPattern=\\.test\\.ts$",
    "test:integration": "jest --testPathPattern=\\.integration\\.test\\.ts$",
    "test:acceptance": "jest --testPathPattern=\\.acceptance\\.test\\.ts$"
  },
  "keywords": [
    "git",
    "merge",
    "package.json",
    "semver",
    "merge-driver"
  ],
  "author": "ehmpathy",
  "license": "MIT",
  "dependencies": {
    "helpful-errors": "1.3.1",
    "semver": "7.6.3"
  },
  "devDependencies": {
    "@types/jest": "29.5.14",
    "@types/node": "22.10.5",
    "@types/semver": "7.5.8",
    "jest": "29.7.0",
    "test-fns": "1.6.0",
    "ts-jest": "29.2.5",
    "typescript": "5.7.3"
  }
}
