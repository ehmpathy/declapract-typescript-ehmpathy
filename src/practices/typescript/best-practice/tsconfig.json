{
  "compilerOptions": {
    "strict": true, // crucial: makes sure that nulls and undefineds are properly handled
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "dist",
    "strictPropertyInitialization": false,
    "lib": [
      "es2019",
    ]
  },
  "filesGlob": [
    "src/**/*.ts"
  ],
  "exclude": [
    "dist",
    "coverage",
    "node_modules",
    ".declapract"
  ],
}
