{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "lib": ["es2019", "dom"]
  },
  "filesGlob": ["src/**/*.ts"],
  "exclude": ["dist", "coverage", "node_modules"]
}
